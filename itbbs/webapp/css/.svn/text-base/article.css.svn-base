/**
 * 文章的样式
 */

/* article下面的h1的a标签*/
#article h1 a{
	color: #29B4F0;
	cursor: auto;
	display: block;
	font-family: 'Microsoft YaHei', 微软雅黑, 'Helvetica Neue', Helvetica, Arial, sans-serif;
	font-size: 24px;
	font-style: normal;
	font-variant: normal;
	font-weight: bold;
	line-height: 34.2856788635254px;
	outline-style: none;
	outline-width: 0px;
	text-decoration: none;	
}

#article h1 a:hover{
	color:rgb(13, 138, 191)
}

#article-list{
	background:#fff;
	width:60%;
	margin-left:10px;
	padding:20px;
	float:left;
	border-left: 1px solid #CCCCCC;
}

.submitted{
	color: rgb(149, 174, 238);
	display: block;
	float: none;
	font-family: 'Microsoft YaHei', 微软雅黑, 'Helvetica Neue', Helvetica, Arial, sans-serif;
	font-size: 12px;
	font-style: normal;
	font-variant: normal;
	font-weight: normal;
	height: 17px;
	line-height: 17.1428394317627px;
	margin-bottom: 5px;
	width: 587px;
}

.tags a ,.tags,submitted{
	background-attachment: scroll;
	background-clip: border-box;
	background-origin: padding-box;
	background-size: auto;
	box-sizing: border-box;
	color: rgb(75, 204, 204);
	cursor: auto;
	display: inline;
	font-family: 'Microsoft YaHei', 微软雅黑, 'Helvetica Neue', Helvetica, Arial, sans-serif;
	font-size: 14px;
	font-style: normal;
	font-variant: normal;
	font-weight: normal;
	height: auto;
	line-height: 17.1428394317627px;
	text-align: left;
	text-decoration: none;
	width: auto;
	zoom: 1;
}

.tags a:hover,.submitted a:hover{
	color:#00A3CF;
}

.note-content{
	overflow: auto;
	border-top-style:dashed;
	border-top-width:1px;
	border-color:#D3D7D9;
	height:auto;
	box-sizing: border-box;
	color: rgb(64, 64, 64);
	display: block;
	font-family: 'Microsoft YaHei', 微软雅黑, 'Helvetica Neue', Helvetica, Arial, sans-serif;
	font-size: 16px;
	font-style: normal;
	font-variant: normal;
	font-weight: normal;
	line-height: 30px;
	margin-bottom: 25px;
	margin-left: 10px;
	margin-right:10px;
	padding-top:10px;
	padding-right:10px;
	margin-top: 6px;
	zoom: 1;
}
.more{
	height:40px;
	border-bottom-style:solid;
	border-bottom-width:1px;
	border-color:#D3D7D9;
}
.more a,.more button,.button{
	background-color: rgb(0, 143, 181);
	background-size: auto;
	border-bottom-left-radius: 3px;
	border-bottom-right-radius: 3px;
	border-top-left-radius: 3px;
	border-top-right-radius: 3px;
	color: rgb(255, 255, 255);
	margin-left:0px;
	cursor: auto;
	display: inline;
	font-family: 'Microsoft YaHei', 微软雅黑, 'Helvetica Neue', Helvetica, Arial, sans-serif;
	font-size: 8px;
	font-style: normal;
	font-variant: normal;
	font-weight: normal;
	height: auto;
	line-height: 18px;
	padding:3px;
	text-align: right;
	width: auto;
}

.more a:hover,.more input:hover,.button:hover{
	background-color:#00B7E9
}

/*大按钮样式*/

.bigmore{
	height:40px;
	border-bottom-style:solid;
	border-bottom-width:1px;
	border-color:#D3D7D9;
}
.bigmore a,.bigmore button,.bigbutton{
	background-color: rgb(0, 143, 181);
	background-size: auto;
	border-bottom-left-radius: 3px;
	border-bottom-right-radius: 3px;
	border-top-left-radius: 3px;
	border-top-right-radius: 3px;
	color: rgb(255, 255, 255);
	cursor: auto;
	display: inline;
	font-family: 'Microsoft YaHei', 微软雅黑, 'Helvetica Neue', Helvetica, Arial, sans-serif;
	font-size: 14px;
	font-style: normal;
	font-variant: normal;
	font-weight: normal;
	height: auto;
	line-height: 18px;
	padding:6px 10px;
	text-align: right;
	width: auto;
}

.bigmore a:hover,.bigmore input:hover,.bigbutton:hover{
	background-color:#00B7E9
}


.node_read_more{
	float:right;
	margin-right:20px;
}

.note{
	margin:20px;
	width:680px;
}



.node-header{
	margin-top:10px;
	margin-bottom:10px;
}

.up-down{
    margin-left: 20px;
    margin-bottom: 40px;
    width:590px;
}

#view{
	background:#fff;
	width:90%;
	margin-top:60px;
	margin-left:auto;
	margin-right:auto;
	padding:40px;
	height:auto;
}

.fb{
    margin-left: 20px;
    margin-bottom: 20px;
    border-top-width:0px;
    border-top-style:solid;
    border-top-color:#D3D7D9;
    color:#29B4F0;
    clear:left;;
}
